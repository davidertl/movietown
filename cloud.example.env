# Example environment variables for cloud-compose.yaml

# General settings
# Time zone for the containers
TIMEZONE=Europe/Berlin
# User ID that will run the containers
PUID=1000
# Group ID that will run the containers
PGID=1000
# Directory for all persisted data
FOLDER_FOR_DATA=/srv/movietown/data
# Directory for media libraries
FOLDER_FOR_MEDIA=/srv/movietown/media

# Network
# CIDR for the external cloud subnet
CLOUD_EXTERNAL_SUBNET=10.10.0.0/24
# Gateway address for the external cloud subnet
CLOUD_EXTERNAL_GATEWAY=10.10.0.1

# Authentik / database
# Version tag for Authentik
AUTHENTIK_VERSION=latest
# Secret key used by Authentik
AUTHENTIK_SECRET_KEY=change-me-very-secret
# Name of the Authentik database
AUTHENTIK_DATABASE=authentik
# Username for the PostgreSQL database
POSTGRESQL_USERNAME=authentik
# Password for the PostgreSQL database
POSTGRESQL_PASSWORD=change-me-postgres
# Port for the PostgreSQL database
POSTGRESQL_PORT=5432
# Port for Valkey
VALKEY_PORT=6379
# Enable or disable Authentik error reporting
AUTHENTIK_ERROR_REPORTING__ENABLED=false

# Ports
# Port where Authentik's web UI will be reachable
WEBUI_PORT_AUTHENTIK=9000
# HTTPS port exposed by the compose stack
COMPOSE_PORT_HTTPS=9443
# Jellyfin web UI port
WEBUI_PORT_JELLYFIN=8096
# Plex web UI port
WEBUI_PORT_PLEX=32400
# Traefik dashboard port
TRAEFIK_DASHBOARD_PORT=8080

# Traefik / SSL/TLS / Reverse Proxy
# Domain for Authentik (e.g., auth.yourdomain.com)
AUTHENTIK_DOMAIN=auth.example.com
# Domain for Jellyfin (e.g., jellyfin.yourdomain.com)
JELLYFIN_DOMAIN=jellyfin.example.com
# Domain for Plex (e.g., plex.yourdomain.com)
PLEX_DOMAIN=plex.example.com
# Email for Let's Encrypt certificate notifications
LETSENCRYPT_EMAIL=admin@example.com
# Enable Let's Encrypt ACME (set to false for development, true for production)
TRAEFIK_ACME_ENABLED=false

# Plex optional claim token (first-time setup, get from https://www.plex.tv/claim)
PLEX_CLAIM=

# Tailscale
# Authentication key for joining the Tailscale network
TAILSCALE_AUTH_KEY=tskey-xxxxxxxxxxxxxxxx
